# Application Environment
# Available options: development, staging, production
VITE_APP_ENV=development

# Debug mode - set to 'true' to enable additional logging
VITE_DEBUG=true

# =============================================================================
# Contentful Configuration
# =============================================================================
# You can get these values from your Contentful space settings
# https://www.contentful.com/developers/docs/references/authentication/

# Required: Your Contentful Space ID
VITE_CONTENTFUL_SPACE_ID=your_space_id_here

# Required: Content Delivery API Access Token (for published content)
VITE_CONTENTFUL_ACCESS_TOKEN=your_delivery_api_token_here

# Optional: Content Preview API Access Token (for draft content)
VITE_CONTENTFUL_PREVIEW_TOKEN=your_preview_api_token_here

# Optional: Contentful Environment (defaults to 'master')
VITE_CONTENTFUL_ENVIRONMENT=master

# Optional: Cache TTL in seconds (defaults to 300 - 5 minutes)
VITE_CONTENTFUL_CACHE_TTL=300

# Optional: Enable preview mode for draft content (defaults to true in development)
VITE_CONTENTFUL_PREVIEW_MODE=false

# Optional: Default locale for content (defaults to 'en-US')
VITE_CONTENTFUL_DEFAULT_LOCALE=en-US

# =============================================================================
# Pexels Configuration
# =============================================================================
# You can get an API key from https://www.pexels.com/api/

# Required: Your Pexels API Key
VITE_PEXELS_API_KEY=your_pexels_api_key_here

# Optional: Cache TTL in seconds (defaults to 3600 - 1 hour)
VITE_PEXELS_CACHE_TTL=3600

# Optional: Default number of images per page (defaults to 15)
VITE_PEXELS_DEFAULT_PER_PAGE=15

# Optional: Enable Pexels fallback images when Contentful assets are missing
VITE_PEXELS_ENABLE_FALLBACKS=true

